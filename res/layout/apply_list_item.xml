<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/item_white_pressed"
              android:clickable="true">

	<View style="@style/Divider"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="12dp"
		android:paddingRight="12dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:orientation="horizontal">

			<LinearLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_weight="1">

				<TextView
					style="@style/TextTrace.Record"
					android:text="@string/after_sale_terminal"/>

				<TextView
					android:id="@+id/apply_terminal_number"
					style="@style/TextItem.Record"/>
			</LinearLayout>

			<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_alignParentLeft="true">

					<TextView
						style="@style/TextTrace.Record"
						android:text="@string/after_sale_status"/>

					<TextView
						android:id="@+id/apply_terminal_status"
						style="@style/TextItem.Record"/>
				</LinearLayout>

				<ImageView
					android:id="@+id/trade_end_arrow"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:src="@drawable/post_right"/>
			</RelativeLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/terminal_button_container"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:clickable="true">

			<View style="@style/Divider"/>

			<LinearLayout
				android:id="@+id/terminal_buttons"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="12dp"
				android:layout_marginBottom="12dp"
				android:layout_gravity="center"
				android:orientation="horizontal"
				android:clickable="true">

				<Button
					android:id="@+id/apply_button_open"
					android:layout_width="0dp"
					android:layout_height="40dp"
					android:layout_weight="1"
					android:layout_marginRight="@dimen/d_12dp"
					android:textColor="@color/white"
					android:background="@drawable/normal_button_selector"
					android:text="@string/apply_button_open"/>

				<Button
					android:id="@+id/apply_button_video"
					android:layout_width="0dp"
					android:layout_height="40dp"
					android:layout_weight="1"
					android:layout_marginLeft="@dimen/d_12dp"
					android:textColor="@color/white"
					android:background="@drawable/normal_button_selector"
					android:text="@string/apply_button_video"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<View style="@style/Divider"/>

</LinearLayout>