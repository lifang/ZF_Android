<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F3F3F3"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
         android:layout_marginTop="20dp"
        android:background="@color/Viewc2" />
    <LinearLayout
        android:layout_width="fill_parent"
         android:background="@color/ffffff"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/d_48dp"
            android:layout_weight="1"
            android:background="@color/ffffff" >

            <LinearLayout
                android:id="@+id/login_img_pass"
                android:layout_width="48dp"
                android:layout_height="fill_parent" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_delete"
                    android:visibility="invisible" />
            </LinearLayout>

            <EditText
                android:id="@+id/login_edit_email"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/login_img_pass"
                android:background="@color/ffffff"
                android:hint="138000000"
                android:maxWidth="20dp"
               
                android:singleLine="true"
                android:textColor="@color/t333333"
                android:textColorHint="@color/edithinit"
                android:textSize="@dimen/s_17sp" />

            <LinearLayout
                android:id="@+id/login_linear_deletemali"
                android:layout_width="@dimen/d_36dp"
                android:layout_height="@dimen/d_36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_delete" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@color/ffffff"
            android:gravity="center"
           	android:layout_marginLeft="7dp"
            android:paddingRight="10dp"
            android:text="发送验证码"
            android:textSize="@dimen/s_17sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/Viewc2" />

     

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/adadad" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="@color/ffffff"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/d_48dp"
            android:layout_weight="1"
             android:background="@color/ffffff"
            >

            <LinearLayout
                android:id="@+id/login_img_passcode"
                android:layout_width="48dp"
                android:layout_height="fill_parent"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <EditText
                android:id="@+id/login_edit_code"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/login_img_passcode"
           android:background="@color/ffffff"
                android:hint="请输入验证码"
                android:maxWidth="20dp"
                android:singleLine="true"
                android:textColor="@color/t333333"
                android:textColorHint="@color/edithinit"
                android:textSize="@dimen/s_17sp" />

            <LinearLayout
                android:id="@+id/login_linear_deletcode"
                android:layout_width="@dimen/d_36dp"
                android:layout_height="@dimen/d_36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_delete" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_48dp"
            android:layout_marginRight="@dimen/margin_left2"
           android:background="@color/ffffff" >

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/check_y"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/img_check_n"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/check_n"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_check"
            android:layout_width="110dp"
            android:layout_height="fill_parent"
            android:background="@color/ffffff"
            android:gravity="center"
            android:text="点击验证"
           	android:visibility="gone"
            android:textSize="@dimen/s_17sp"
            />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/adadad" />

     

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/adadad" />

     
 
    <LinearLayout
        android:id="@+id/login_linear_signin"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
     	android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp"
        android:background="@drawable/bg_blue_shape"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:text="核对验证码"
            android:textColor="@color/fffefe"
            android:textSize="@dimen/s_17sp" />
    </LinearLayout>

</LinearLayout>