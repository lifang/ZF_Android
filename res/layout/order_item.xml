<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" 
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="24dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_ddbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="订单编号:123444444"
            android:textColor="@color/text6c6c6c6"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="2015-1-1 12:00：00"
            android:textColor="@color/text6c6c6c6"
            android:textSize="8sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/order_item_img" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:text="已经发货"
            android:textColor="@color/text6c6c6c6"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/Viewc2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/evevt_img"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/moren" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/content_pp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:text="品牌型号"
                android:textColor="@color/text292929"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="￥ 19.99"
                android:textColor="@color/text292929"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_goodnum"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="X   2"
                android:textColor="@color/text292929"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/content1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="品牌型号"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="contentcontentcontentcontent"
                    android:textColor="@color/text292929"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="支付通道"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_gtd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:text="支付宝"
                    android:textColor="@color/text292929"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/Viewc2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="共计:   10件"
            android:textColor="@color/text6c6c6c6"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_psf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="配送费：￥0.00"
            android:textColor="@color/text6c6c6c6"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:text="实付：      "
            android:textColor="@color/text6c6c6c6"
            android:textSize="13sp" />
    </LinearLayout>

     
	 <LinearLayout
	     android:id="@+id/ll_ishow"
	      android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/Viewc2" />
	        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal" >

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/buttong_light"
            android:textColor="@color/bgtitle"
            android:id="@+id/btn_cancle"
            android:text="取消订单" />

        <Button
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:background="@color/ffffff"
              />

        <Button
            android:layout_width="140dp"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_blue_shape"
            android:text="评价"
            android:visibility="gone"
            android:textColor="@color/ffffff" />

        <Button
              android:id="@+id/btn_pay"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_shape"
            android:textColor="@color/ffffff"
            android:text="付款" />
    </LinearLayout>
	    
	    
	    
	    
	</LinearLayout>
 
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
       
        android:background="@color/Viewc2" />
        <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
       
        android:background="@color/F3F2F2" />
</LinearLayout>