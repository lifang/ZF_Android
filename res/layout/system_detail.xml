<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/F3F2F2"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/msg_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="17dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text6c6c6c6"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/msg_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:textColor="@color/text6c6c6c6"
                android:textSize="10sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="5dp"
                android:background="@color/bgtitle" />

            <TextView
                android:id="@+id/msg_conten"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:lineSpacingExtra="6dp"
                android:textColor="@color/text6c6c6c6"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>