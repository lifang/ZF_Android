<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/F3F2F2"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/adress_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left2"
                android:layout_marginRight="@dimen/margin_left2"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:text="终  端  号"
                android:textColor="@color/text6c6c6c6"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left2"
                    android:layout_marginTop="30dp"
                    android:text="对个人开通"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="20sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/margin_left2"
                    android:layout_marginRight="@dimen/margin_left2"
                    android:layout_marginTop="3dp"
                    android:background="@color/Viewc2" />

                <com.examlpe.zf_android.util.ScrollViewWithListView
                    android:id="@+id/pos_lv1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left2"
                    android:layout_marginRight="@dimen/margin_left2"
                    android:layout_marginTop="10dp"
                    android:divider="@null" >
                </com.examlpe.zf_android.util.ScrollViewWithListView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left2"
                    android:layout_marginTop="30dp"
                    android:text="对公开通"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="20sp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/margin_left2"
                    android:layout_marginRight="@dimen/margin_left2"
                    android:layout_marginTop="3dp"
                    android:background="@color/Viewc2" />

                <com.examlpe.zf_android.util.ScrollViewWithListView
                    android:id="@+id/pos_lv2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left2"
                    android:layout_marginRight="@dimen/margin_left2"
                    android:layout_marginTop="10dp"
                    android:divider="@null" >
                </com.examlpe.zf_android.util.ScrollViewWithListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>