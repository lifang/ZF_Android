<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <com.example.zf_android.trade.widget.gestureimage.MyViewPager
        android:id="@+id/web_image_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <Button
        android:id="@+id/upload_again"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textColor="@color/blank_button_white_selector"
        android:textSize="15sp"
        android:text="@string/apply_upload_again"
        android:background="@drawable/blank_button_white_selector"/>

</RelativeLayout>