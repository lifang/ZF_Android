<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="86dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/evevt_img"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/testphone401" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/content_pp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"
                android:textColor="@color/text292929"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="￥ 99.99"
                android:textColor="@color/bgtitle"
                android:textSize="11sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_x"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:text="X   2"
                android:textColor="@color/text292929"
                android:textSize="11sp"
                android:visibility="invisible" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/content1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:text="品牌型号"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/content2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:textColor="@color/text292929"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:text="支付通道"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="11sp" />

                    <TextView
                              android:id="@+id/contentText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:maxLines="1"
                        android:textColor="@color/text292929"
                        android:textSize="11sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="评分："
            android:textColor="@color/text292929"
            android:textSize="17sp" />

        <RatingBar
            android:id="@+id/si_rt_msxf"
            style="@style/star_rating_bar_style1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/margin_left2"
            android:layout_marginTop="2dp"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/ffffff" >

        <EditText
            android:id="@+id/item_et"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="@dimen/margin_left2"
            android:layout_marginRight="14dp"
            android:background="@color/ffffff"
            android:gravity="top"
            android:hint="请输入评价"
            android:textColor="@color/text292929"
            android:textSize="10sp" />

        <TextView
                 android:id="@+id/maxCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_et"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="@dimen/margin_left2"
            android:layout_marginRight="@dimen/margin_left2"
            android:singleLine="true"
            android:text="最多填写200个汉字"
            android:textColor="@color/text292929"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/Viewc2" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/F3F2F2" />

</LinearLayout>