<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/F3F2F2"
    android:orientation="vertical" >

    <include layout="@layout/title_back" />

    <LinearLayout
        android:id="@+id/ll_choose"
        android:layout_width="fill_parent"
        android:layout_height="96dp"
        android:background="#000000" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_sjr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="收件人: "
                    android:textColor="@color/ffffff"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="收件地址: "
                android:textColor="@color/ffffff"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:src="@drawable/right_gg" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/F3F2F2" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/ffffff" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:background="@color/ffffff" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="86dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/evevt_img"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_marginLeft="14dp"
                        android:background="@drawable/testphone401" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="14dp"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/title2"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:textColor="@color/text292929"
                                android:textSize="11sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="3dp"
                                android:layout_marginTop="3dp"
                                android:background="@color/ffffff" />

                            <TextView
                                android:id="@+id/editView"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="14dp"
                                android:layout_marginRight="@dimen/margin_right"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:maxLines="1"
                                android:text="编辑"
                                android:textColor="@color/bgtitle"
                                android:textSize="11sp"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/ffffff" />

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3" >

                            <TextView
                                android:id="@+id/retail_price"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="7dp"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/bgtitle"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/showCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@id/retail_price"
                                android:layout_marginRight="7dp"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="1"
                                android:text="X   1"
                                android:textColor="@color/text292929"
                                android:textSize="11sp" />

                            <ImageView
                                android:id="@+id/delete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="7dp"
                                android:background="@drawable/sc_delete"
                                android:visibility="invisible" />

                            <LinearLayout
                                android:id="@+id/zftd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:gravity="bottom"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/wayName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="bottom"
                                    android:maxLines="1"
                                    android:text="支付通道"
                                    android:textColor="@color/text6c6c6c6"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/channel_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:ellipsize="end"
                                    android:gravity="bottom"
                                    android:maxLines="1"
                                    android:text=""
                                    android:textColor="@color/text292929"
                                    android:textSize="11sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/zf_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@id/zftd"
                                android:gravity="bottom"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/Model_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="bottom"
                                    android:maxLines="1"
                                    android:text="品牌型号"
                                    android:textColor="@color/text6c6c6c6"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/content2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:ellipsize="end"
                                    android:gravity="bottom"
                                    android:maxLines="1"
                                    android:text=""
                                    android:textColor="@color/text292929"
                                    android:textSize="11sp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/Viewc2" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="23dp"
                        android:maxLines="1"
                        android:text="租赁数量（/件）"
                        android:textColor="@color/text292929"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/ll_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="7dp"
                        android:background="@drawable/sc_edit"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/reduce"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:background="@drawable/jian" />

                        <EditText
                            android:id="@+id/buyCountEdit"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@color/ffffff"
                            android:gravity="center"
                            android:numeric="integer"
                            android:text="1" />

                        <ImageView
                            android:id="@+id/add"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:background="@drawable/jia" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/Viewc2" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:text="押金"
                        android:textColor="@color/text292929"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_yajin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="￥  0"
                        android:textColor="@color/bgtitle"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/Viewc2" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp" >

                <LinearLayout
                    android:id="@+id/llll"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="最短租赁时间365天"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="最短租赁时间30天"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="8sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_lkl"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/llll"
                    android:layout_weight="1"
                    android:background="@drawable/bg_shape"
                    android:gravity="center"
                    android:text="查看租赁说明"
                    android:textColor="@color/bgtitle"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_totle"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:text="实付："
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="7dp"
                        android:layout_weight="1"
                        android:textColor="@color/text6c6c6c6"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="共计:   1件"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="配送费：￥0"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="8sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/comment_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/edit_login"
                android:hint="留言" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/Viewc2" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@color/F3F2F2"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/item_cb"
                    style="@style/MyCheckBox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="32dp"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="30dp"
                    android:text="我同意"
                    android:textColor="@color/text6c6c6c6"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="30dp"
                    android:text="《租赁协议》"
                    android:textColor="@color/bgtitle"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="74dp"
        android:background="#E1E0E0"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="实付："
                android:textColor="@color/text292929"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="（ 含配送费：）"
                android:textColor="@color/text292929"
                android:textSize="8sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/bg_blue_shape"
            android:text="确认"
            android:textColor="@color/ffffff" />
    </LinearLayout>

</LinearLayout>